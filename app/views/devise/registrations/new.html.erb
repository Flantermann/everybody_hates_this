<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <h2 class="form-header">Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name,
                      required: true,
                      autofocus: true,
                      input_html: {class: 'input-line' },
                      class:"background-red"%>
          <%= f.input :last_name,
                      required: true,
                      autofocus: true,
                      input_html: { class: 'input-line' }%>
          <%= f.input :nickname,
                      required: true,
                      autofocus: true,
                      input_html: { class: 'input-line' }%>
          <%= f.input :age,
                      required: true,
                      autofocus: true,
                      input_html: { class: 'input-line' }%>
          <%= f.input :address,
                      required: true,
                      autofocus: true,
                      input_html: { class: 'input-line' }%>
          <%= f.input :about_me,
                      required: true,
                      autofocus: true,
                      input_html: { class: 'input-line' }%>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: 'input-line' }%>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { class: 'input-line' } %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { class: 'input-line' } %>
          <%= f.input :photo, as: :file, label: "Profile Pic" %>
          <br>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class:"btn-sign-up" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<div class="container">
  <% if policy(@mission).edit? %>
    <%= link_to "update", edit_mission_path(@mission) %>
  <% end %>
  <% if policy(@mission).destroy? %>
    <%= link_to "delete", mission_path(@mission), method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>
  <p> Category: <%= @mission.category %> </p>
  <p> Timeframe: <%= @mission.timeframe%> </p>
  <h1> <%= @mission.title %> </h1>
  <p> <%= @mission.description %> </p>
  <p> Min. buddy age: <%= @mission.prefered_buddy_age_start %> </p>
  <p> Max. buddy age: <%= @mission.prefered_buddy_age_end %> </p>
  <p> My buddy should live...: <%= @mission.prefered_buddy_location %> </p>
</div>
